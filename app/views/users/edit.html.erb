<% @user.errors.full_messages.each do |message| %>
    <div class="form-error">
       <%= message %>
    </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <%= form_for (@user) do |f| %>
          <h4>name</h4>
          <%= f.text_field :name, class:"W" %>
          <h4>Image</h4>
          <%= f.attachment_field :profile_image, class:"W" %>
          <h4>opinion</h4>
          <%= f.text_area :introduction, class:"W" %>
          <%= f.submit 'Update User', class:"btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>