<% @user.errors.full_messages.each do |message| %>
    <div class="form-error">
       <%= message %>
    </div>
<% end %>

<h1>User info</h1>
<%= form_for (@user) do |f| %>
  <h4>name</h4>
  <%= f.text_field :name %>
  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>
  <h4>opinion</h4>
  <%= f.text_area :introduction %>
  <%= f.submit 'Update User' %>
<% end %>