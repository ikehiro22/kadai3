<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <%= render 'books/list', book: @book, user: current_user %>
        </div>
        <div class="col-xs-9">
            <h1>Users</h1>
            <table>
            <tr>
              <td>image</td>
              <td>name</td>
            </tr>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "noimage.jpg" ,class:"icon"%></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>  
            </table>
        </div>
    </div>
</div>




