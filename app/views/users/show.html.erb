<% if flash[:notice] %>
    <div class="flash">
        <%#= flash[:notice] %>
    </div>
<% end %>

<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <%= render 'books/list', book: @book, user: @user %>
        </div>
        <div class="col-xs-9">
            <h1>Books</h1>
            <table>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
              <% @books.each do |book| %>
                <tr>
                  <th><%= link_to user_path(@user.id) do %>
                      <%= attachment_image_tag @user, :profile_image %><%= @user.name %>
                      <% end %></th>
                  <th><%= link_to book.title, book_path(book.id) %></th>
                  <th><%= book.body %></th>
                  <th><%= link_to "Edit", edit_book_path(book.id) %> </th>
                  <th><%= link_to "Destroy", book_path(book.id), method: :delete,  "data-confirm" => "honntoooooooooooooooooooooooooooooooooooooonisakuzyoshimasukaaaa?" %> </th>
                </tr>
              <% end %>
              
            </table>
        </div>
    </div>
</div>



