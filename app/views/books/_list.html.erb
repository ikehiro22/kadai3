<div class="user">
    <h1>User info</h1>
    <h4><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "noimage.jpg",  class:"icon"  %></h4>  
    <h4>name <%= user.name %></h4>
    <h4>introduction <%= user.introduction %></h4>
    <%= link_to  edit_user_path(user.id), class: "btn btn-outline-secondary" do %>
    <i class="fas fa-user-cog" aria-hidden="true" ></i>
    <% end %>
</div>

<h1>New book</h1>
<%= form_for (book) do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>
