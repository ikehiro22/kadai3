<% @book.errors.full_messages.each do |message| %>
    <div class="form-error">
       <%= message %>
    </div>
<% end %>
<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
<% end %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'books/list', book: @book, user: current_user %>
            
        </div>
        <div class="col-md-8 offset-md-1">
            
            <h1>Books</h1>
            <table>
                <tr>
                    <th></th>
                    <th>title</th>
                    <th>Opinion</th>
                </tr>
                <%# if @books.present? %>
                    <% @books.each do |book| %>
                    <tr>
                        <th><%= link_to  user_path(book.user.id) do %>
                            <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "noimage.jpg"  %>
                            <% end %></th>
                        
                        <th><%= link_to book.title, book_path(book.id) %></th>
                        <th><%= book.body %></th>
                    </tr>
                    
                    <% end %>
                <%# end %>
            </table>
        </div>
    </div>
</div>

